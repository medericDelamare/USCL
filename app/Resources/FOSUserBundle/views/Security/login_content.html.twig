{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div style="margin-bottom: 25px" class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <input type="text" id="username" type="text" class="form-control input-lg" name="_username" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans }}" required="required">
    </div>
    <div style="margin-bottom: 25px" class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <input id="password" type="password" class="form-control input-lg" name="_password" placeholder="{{ 'security.login.password'|trans }}">
    </div>
    <div class="input-group">
        <div class="checkbox">
            <label>
                <input id="login-remember" type="checkbox" name="remember" value="1">{{ 'security.login.remember_me'|trans }}
            </label>
        </div>
    </div>
    <div style="margin-top:10px" class="form-group">
        <div class="col-sm-12 controls">
            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-success btn-lg" style="margin: 15px;" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12 control">
            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                <div class="row">
                    Vous n'avez pas de compte! <a href="{{ path('fos_user_registration_register') }}" onClick="$('#loginbox').hide(); $('#signupbox').show()">Inscriptivez-vous</a>
                </div>
                <div class="row">
                    <a href="{{ path('fos_user_resetting_request') }}">{{ 'Mot de passe oubli√©?' }}</a>
                </div>
            </div>
        </div>
    </div>
</form>


