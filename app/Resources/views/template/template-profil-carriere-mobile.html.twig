<div class="card card-stats-rencontre">
    <div class="card-body">
        <div class="row text-center">
            <div class="col-12">
                <div class="font-weight-bold mb-2 titre-rencontre">{{ carriere.saison|upper }}</div>
            </div>
            {% if carriere.club %}
                <div class="col-12">
                    <img class='img-carriere' src="{{ asset('pictures/Logos/' ~ carriere.club.logo) }}">
                </div>
                <div class="col-12">
                    {{ carriere.club.nom }}
                </div>
            {% else %}
                <div class="col-12">
                    {{ carriere.clubParse }}
                </div>
            {% endif %}
            <div class="col-12 font-italic">
                ({{ carriere.SousCategorie }})
            </div>
        </div>
    </div>
</div>
