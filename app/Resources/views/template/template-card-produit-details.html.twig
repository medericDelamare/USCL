<div class="card box-shadow card-profil text-center border-uscl-primary">
    <div class="card-body p-0 pb-2">
        <div class="card-header text-center border-uscl-primary">
            <h1>{{produit.nom}}</h1>
            {% if produit.logo %}<span><em>Logo obligatoire</em></span>{% endif %}
        </div>
        <div class="row m-3">
            <div class="col-6">
                <img style="width: 200px" src="{{ asset('pictures/Boutique/') ~ produit.image }}" style="width: 150px"><br>
                <h3 class="font-weight-bold">{{produit.prixCatalogue}}â‚¬</h3>
                <span><em>(Prix club nu)</em></span>
            </div>
            <div class="col-6">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.taille) }}
                    {{ form_errors(form.taille) }}
                    {{ form_widget(form.taille) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.quantite) }}
                    {{ form_errors(form.quantite) }}
                    {{ form_widget(form.quantite) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.initiales) }}
                    {{ form_errors(form.initiales) }}
                    {{ form_widget(form.initiales) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>