<div class="tab-pane fade {% if id == 'pills-seniors' %}show active{% endif %}" id="{{id}}" role="tabpanel"
     aria-labelledby="pills-home-tab">
    <div class="col-12 offset-md-2 col-md-8 p-0">
        <h3 class="text-center mb-2 mt-2">{{title}}</h3>
        <div class="table-responsive">
            <table class="table table-sm tableau-buteur">
                <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Buts</th>
                    <th scope="col">Mat.</th>
                    <th scope="col">Rat.</th>
                </tr>
                </thead>
                <tbody>
                {% for nom, buteur in buteurs %}
                    <tr class="tr-buteurs">
                        <td class="pl-4"><a href="{{ path('profile', {'id': buteur.id}) }}">{{ nom }}</a>
                        </td>
                        <td>{{ buteur.nb_buts }}</td>
                        <td>{{ buteur.nb_matchs }}</td>
                        {% if buteur.nb_matchs|length > 0  %}
                            <td>{{ (buteur.nb_buts / buteur.nb_matchs)|number_format(2, '.', ',') }}</td>
                        {% else %}
                            <td>-</td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>