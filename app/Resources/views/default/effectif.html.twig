                <th>Buts</th>
                <th>Passes</th>
                <th>Cartons Jaunes</th>
                <th>Cartons Rouges</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Numéro de téléphone</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for gardien in gardiens%}
