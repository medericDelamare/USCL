                    <td><a href="{{ path('profile', {'id': gardien.id}) }}">{{ gardien.nom }}</a></td>
                    <td>{{ gardien.prenom }}</td>
                    <td>{{ gardien.buts }}</td>
                    <td>{{ gardien.passes }}</td>
                    <td>{{ gardien.cartonsJaunes }}</td>
                    <td>{{ gardien.cartonsRouges }}</td>
                    {% if is_granted('ROLE_ADMIN') %}
