{% for calendrierDetail in equipes %}
    <tr class="align-middle">
        <td >{{ calendrierDetail.date|date("d/m/Y") }}</td>
        {% if calendrierDetail.equipeDomicile.club %}
            <td class="equipeGauche"><img class="img-carriere mr-4" src="{{ asset('pictures/Logos/' ~ calendrierDetail.equipeDomicile.club.logo) }}"><span class="d-none d-sm-inline-block">{{ calendrierDetail.equipeDomicile.club.nom }}</span></td>
        {% else %}
            <td class="equipeGauche">{{ calendrierDetail.equipeDomicile.nomParse }}</td>
        {% endif %}

        {% if calendrierDetail.stats %}
            <td class="text-center score text-nowrap"><a href="{{ path('rencontre', { 'id': calendrierDetail.id}) }}">{{ calendrierDetail.score }} </a></td>
        {% else %}
            {% if calendrierDetail.score %}
                <td class=" text-center score text-nowrap">{{ calendrierDetail.score }}</td>
            {% else %}
                <td class="text-center score text-nowrap">VS</td>
            {% endif %}
        {% endif %}

        {% if calendrierDetail.equipeExterieure.club %}
            <td class="equipeDroite"><span class="d-none d-sm-inline-block">{{ calendrierDetail.equipeExterieure.club.nom }}</span><img class="img-carriere ml-4" src="{{ asset('pictures/Logos/' ~ calendrierDetail.equipeExterieure.club.logo) }}"></td>
        {% else %}
            <td class="equipeDroite">{{ calendrierDetail.equipeExterieure.nomParse }}</td>
        {% endif %}
    </tr>
{% endfor %}