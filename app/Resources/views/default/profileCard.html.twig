<div class="panel widget">
    <div class="widget-header bg-uscl"></div>
    <div class="widget-body text-center">
        <img alt="Profile Picture" class="widget-img img-circle img-border-light" src="{{ licencie.photo }}">
        <h4 class="mar-no">{{ licencie.nomComplet }}</h4>
        <p class="text-muted mar-btm">{{ role }}</p>

        <div class="pad-ver">
            <button class="btn btn-primary">
                <i class="fa fa-phone" aria-hidden="true"></i>
                <a class="text-white" href="tel:{{ licencie.telephoneDomicile | default(licencie.telephonePortable) }}">{{ licencie.telephoneDomicile | default(licencie.telephonePortable) }}</a>
            </button>
            <button class="btn btn-success">
                <i class="fa fa-envelope" aria-hidden="true"></i>
                <a class="text-white" href="mailto:{{ licencie.email }}">{{ licencie.email }}</a>
            </button>
        </div>
    </div>
</div>