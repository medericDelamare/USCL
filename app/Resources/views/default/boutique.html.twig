{% extends 'base.html.twig' %}
{% block body %}
    <header class="business-header" style="background: url({{ asset('pictures/bueau.jpg') }}) center center no-repeat scroll;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="tagline"></h1>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <h1 class="text-center m-4">Boutique</h1>
        <div class="row">
            {% for produit in produits %}
                <div class="col-4">
                    {% include 'template/template-card-produit.html.twig' with {'produit': produit} %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}