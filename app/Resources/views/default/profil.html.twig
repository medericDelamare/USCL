                    <div class="row"><i class="fa fa-birthday-cake" aria-hidden="true"></i> <strong>Pied fort : </strong> {{ joueur.nom }}</div>
                    <div class="row"><i class="fa fa-birthday-cake" aria-hidden="true"></i> <strong>Poste : </strong> {{ joueur.poste }}</div>
                    <div class="row"><i class="fa fa-birthday-cake" aria-hidden="true"></i> <strong>Equipe favorite : </strong> {{ joueur.nom }}</div>
                    <div class="row"><i class="fa fa-birthday-cake" aria-hidden="true"></i> <strong>Joueur favoris : </strong> {{ joueur.nom }}</div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container -->

<!-- jQuery -->
<script src="{{ asset('vendor/jquery/dist/jquery.min.js') }}"></script>

<!-- Bootstrap Core JavaScript -->
<script src="{{ asset('vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>

