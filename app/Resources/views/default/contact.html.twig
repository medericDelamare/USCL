{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="index.php">Accueil</a></li>
        <li class="active">Contact</li>
    </ol>


    <div class="container ">
        <h1 class="page-header">Contact</h1>
        {{ form_start(form) }}

            <div class="messages"></div>

            <div class="controls">

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="form_name">{{ form_label(form.nom) }} *</label>
                            {{ form_widget(form.nom) }}
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="form_lastname">{{ form_label(form.prenom) }} *</label>
                            {{ form_widget(form.prenom) }}
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="form_email">{{ form_label(form.email) }} *</label>
                            {{ form_widget(form.email) }}
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="form_phone">{{ form_label(form.telephone) }} *</label>
                            {{ form_widget(form.telephone) }}
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="form_message">{{ form_label(form.message) }} *</label>
                            {{ form_widget(form.message) }}
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-success btn-send col-md-offset-5 col-md-2" value="Envoyer">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p class="text-muted"><strong>*</strong> Champs obligatoires.</p>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}